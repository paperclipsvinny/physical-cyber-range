! ============================================================
! Cisco 2621 — R1-CyberRange
! Router-on-a-stick configuration
! ============================================================
hostname R1-CyberRange
no ip domain-lookup
enable secret <YOUR_PASSWORD_HERE>
! ------------------------------------------------------------
! Fa0/0 — Attacker Kali direct link (no trunk needed)
! ------------------------------------------------------------
interface FastEthernet0/0
 description ATTACKER_KALI
 ip address 192.168.10.1 255.255.255.0
 no shutdown
! ------------------------------------------------------------
! Fa0/1 — Trunk to switch (parent interface, no IP)
! Subinterfaces below handle per-VLAN routing
! ------------------------------------------------------------
interface FastEthernet0/1
 description TRUNK_TO_SWITCH
 no ip address
 no shutdown
! ------------------------------------------------------------
! Fa0/1.20 — VLAN 20 (Target)
! ------------------------------------------------------------
interface FastEthernet0/1.20
 description VLAN20_TARGET
 encapsulation dot1Q 20
 ip address 192.168.20.1 255.255.255.0
 no shutdown
! ------------------------------------------------------------
! Fa0/1.30 — VLAN 30 (Splunk/SIEM)
! ------------------------------------------------------------
interface FastEthernet0/1.30
 description VLAN30_SPLUNK
 encapsulation dot1Q 30
 ip address 192.168.30.1 255.255.255.0
 no shutdown
end
write memory
